<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Вход</h1>
        <% include ./partials/messages %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Телефон</label>
            <input
              type="tel"
              id="tel"
              name="telefoneNumber"
              class="form-control"
              placeholder="Номер телефона"
              value="<%= typeof telefoneNumber !== 'undefined' ? telefoneNumber : "" %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Пароль</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Пароль"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Войти</button>
        </form>
      </div>
    </div>
  </div>
  